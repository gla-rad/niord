<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="default" transaction-type="JTA">

        <!-- TODO: You will need to override this in the customisation project -->
        <description>The default persistence unit</description>

        <properties>
            <property name="hibernate.archive.autodetection" value="class" />
            <property name="hibernate.dialect" value="org.hibernate.spatial.dialect.postgis.PostgisPG10Dialect" />
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver" />
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/niord" />
            <property name="hibernate.connection.username" value="user" />
            <property name="hibernate.connection.password" value="password" />
            <!-- <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.flushMode" value="FLUSH_AUTO" />-->
            <property name="hibernate.hbm2ddl.auto" value="update" />

            <!-- Hibernate Search Configuration -->
            <property name="hibernate.search.backend.directory.root" value=".lucene" />
        </properties>
    </persistence-unit>

</persistence>